<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fxd.dao.CheckItemDao">

    <!--分页查询-->
    <select id="selectByCondition" parameterType="string" resultType="com.fxd.pojo.CheckItem">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where name like "%"#{value}"%" or code = #{value}
        </if>
    </select>

    <!--添加-->
    <select id="add" parameterType="com.fxd.pojo.CheckItem">
        insert into t_checkitem (code,name,sex,age,price,type,attention,remark)
        values (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </select>

    <!--查询关联-->
    <select id="getCountByCheckItemId" parameterType="int" resultType="int">
        select count(*) from t_checkgroup_checkitem where checkitem_id = #{id}
    </select>

    <!--根据id删除检查项-->
    <delete id="deleteById" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>

    <!--修改检查项-->
    <update id="edit" parameterType="com.fxd.pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="code != null and code.length > 0">
                code = #{code},
            </if>
            <if test="name!=null and name.length>0">
                name=#{name},
            </if>
            <if test="sex!=null and sex.length>0">
                sex=#{sex},
            </if>
            <if test="age!=null and age.length>0">
                age=#{age},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="type!=null and type.length>0">
                type=#{type},
            </if>
            <if test="remark!=null and remark.length>0">
                remark=#{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention=#{attention}
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--根据Id查找检查项-->
    <select id="findById" parameterType="int" resultType="com.fxd.pojo.CheckItem" >
        select * from t_checkitem where id = #{id}
    </select>
    
    <!--查询所有检查项-->
    <select id="findAll" resultType="com.fxd.pojo.CheckItem">
        select * from t_checkitem
    </select>
</mapper>